{% extends 'base.html.twig' %}

{% block title %}Dossier de Suspension{% endblock %}

{% block body %}

    <div class="container-fluid">
    <h1 class="title">Information du dossier</h1>
    <table class="table table-hover table-dark">
        <tbody>
            <tr>
                <th>Dépose au Greffe le</th>
                <td>{{ dossier_suspension.dateDepot | date("d/m/Y")}}</td>
            </tr>
            <tr>
                <th>Sous dossier n°</th>
                <td>{{ dossier_suspension.sousDossier }}</td>
            </tr>
            <tr>
                <th>Provision</th>
                <td>{{ dossier_suspension.provision }}</td>
            </tr>
            <tr>
                <th>Decision attaquée</th>
                <td>{{ dossier_suspension.decisionAttaque }}</td>
            </tr>
            <tr>
                <th>Réf.Dos.Cas</th>
                <td>{{ dossier_suspension.refDos }}</td>
            </tr>
            <tr>
                <th>Démandeur(s)</th>
                <td>{{ dossier_suspension.demandeur }}</td>
            </tr>
            <tr>
                <th>Tél</th>
                <td>{{ dossier_suspension.telDemandeur }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ dossier_suspension.emailDemandeur }}</td>
            </tr>
            <tr>
                <th>Défendeur(s)</th>
                <td>{{ dossier_suspension.defendeur }}</td>
            </tr>
            <tr>
                <th>Tél</th>
                <td>{{ dossier_suspension.telDefendeur }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ dossier_suspension.emailDefendeur }}</td>
            </tr>
            <tr>
                <th>Signification</th>
                <td>{{ dossier_suspension.signification | date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Dépot signification</th>
                <td>{{ dossier_suspension.depotSignification | date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Dépot mémoire</th>
                <td>{{ dossier_suspension.depotMemoire | date("d/m/Y")}}</td>
            </tr>
            <tr>
                <th>Notif mémoire</th>
                <td>{{ dossier_suspension.notifMemoire | date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Réf.Ordonnance rendue</th>
                <td>{{ dossier_suspension.refOrdonnance }}</td>
            </tr>
            <tr>
                <th>Décision du Premier Président de la Cours Suprême</th>
                <td>{{ dossier_suspension.decisionPremierPresident }}</td>
            </tr>
            <tr>
                <th>N°</th>
                <td>{{ dossier_suspension.numeroDecision }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ dossier_suspension.dateDecision | date("d/m/Y") }}</td>
            </tr>
            
        </tbody>
    </table>
    
    
    <form method="post">
      <div class="alignbtn">
        <div class="form-group row">
            <div class="col-md">
                <button class="btn btn-default btn-lg"><a href="{{ path('liste') }}">Retour à la liste</a></button>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="col-md">
                <button class="btn btn-default btn-lg"><a href="{{ path('dossier_suspension_edit', {'id': dossier_suspension.id}) }}">Modifier</a></button>
            </div>
            <div class="col-md">
                {{ include('dossier_suspension/_delete_form.html.twig') }}
            </div>
            {% endif %}
        </div>
    </form>
</div>
{% endblock %}
